// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ================================
// Enums
// ================================

enum UserRole {
  ADMIN
  TEAM_LEADER
  MEMBER
}

enum TokenType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  REGISTRATION_CONFIRMATION
}

enum UserTeam {
  ALL
  NONE
  VIDEO
  EDIT
  DEVELOP
}

// ================================
// User & Authentication
// ================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime? // メール認証済みの日時
  password      String // ハッシュ化されたパスワード（bcryptで最大72文字）
  name          String    @default("unknown")
  role          UserRole  @default(MEMBER)
  team          UserTeam  @default(ALL) // チーム所属

  // タイムスタンプ
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? // ソフトデリート用

  // リレーション
  profile      Profile?
  blogs        Blog[]
  tokens       VerificationToken[]
  sessions     Session[]
  loginHistory LoginHistory[]

  @@index([email])
  @@index([deletedAt])
  @@map("users")
}

model Profile {
  id        String  @id @default(cuid())
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String  @unique
  bio       String? @db.Text // 自己紹介（長文対応）
  avatarUrl String? @db.VarChar(500) // アバターURL（長さ制限）
  isPublic  Boolean @default(false) // プロフィール公開設定

  twitterUsername   String? @db.VarChar(15) // Twitterのユーザー名 
  githubUsername    String? @db.VarChar(39) // GitHubのユーザー名
  instagramUsername String? @db.VarChar(30) // Instagramのユーザー名

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("profiles")
}

// ================================
// Content
// ================================

model Blog {
  id        String  @id @default(cuid())
  title     String  @db.VarChar(200)
  content   String  @db.Text // Markdown/HTML対応
  published Boolean @default(false) // 公開/非公開
  slug      String? @unique // SEO用のURL

  // 作者（UserとのみRelation - Profileとの重複を削除）
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  // タイムスタンプ
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?
  deletedAt   DateTime? // ソフトデリート

  @@index([authorId])
  @@index([published])
  @@index([createdAt(sort: Desc)]) // 新着順ソート用
  @@index([slug])
  @@index([deletedAt])
  @@map("blogs")
}

// ================================
// Authentication Tokens
// ================================

model VerificationToken {
  id        String    @id @default(cuid())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  token     String    @unique @default(cuid())
  type      TokenType
  expires   DateTime // アプリケーション側で有効期限を設定
  createdAt DateTime  @default(now())

  @@unique([userId, token])
  @@index([userId])
  @@index([expires]) // 期限切れトークンのクリーンアップ用
  @@index([type])
  @@map("verification_tokens")
}

// ================================
// Sessions
// ================================

model Session {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  sessionToken String   @unique @default(cuid())
  expires      DateTime // アプリケーション側で30日後を設定

  // 追加情報
  userAgent String? @db.Text // ブラウザ情報
  ipAddress String? @db.VarChar(45) // IPv6対応

  createdAt    DateTime @default(now())
  lastActivity DateTime @default(now()) // 最終アクティビティ時刻

  @@index([userId])
  @@index([expires]) // 期限切れセッションのクリーンアップ用
  @@index([sessionToken])
  @@index([lastActivity])
  @@map("sessions")
}

// ================================
// Audit & Security
// ================================

model LoginHistory {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  success   Boolean // ログイン成功/失敗
  ipAddress String? @db.VarChar(45)
  userAgent String? @db.Text

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt(sort: Desc)])
  @@index([success])
  @@map("login_history")
}
