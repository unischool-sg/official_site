{
     "buildCommand": "prisma generate && next build",
     "outputDirectory": ".next",
     "devCommand": "next dev",
     "installCommand": "npm install",
     "framework": "nextjs",
     "regions": ["iad1"],
     "functions": {
          "app/api/**/*.ts": {
               "maxDuration": 10,
               "memory": 1024
          }
     },
     "headers": [
          {
               "source": "/api/(.*)",
               "headers": [
                    {
                         "key": "Cache-Control",
                         "value": "no-store, must-revalidate"
                    },
                    {
                         "key": "Access-Control-Allow-Credentials",
                         "value": "true"
                    }
               ]
          },
          {
               "source": "/(.*)",
               "headers": [
                    {
                         "key": "X-Content-Type-Options",
                         "value": "nosniff"
                    },
                    {
                         "key": "X-Frame-Options",
                         "value": "DENY"
                    },
                    {
                         "key": "X-XSS-Protection",
                         "value": "1; mode=block"
                    }
               ]
          }
     ],
     "rewrites": [
          {
               "source": "/api/:path*",
               "destination": "/api/:path*"
          }
     ]
}
